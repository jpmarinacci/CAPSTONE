<div class="oppFormResults initialDisplayNone">
	<span class="centerText">Opportunity Results:</span>
	<ul class="resultsList"></ul>
</div>

<button class="saveOpportunity btn btn-warning btn--decorated pull-right">Submit</button>
<h4 class="oppFormHeader mb-4">Create an Opportunity</h4>

<div class="opportunityForm mt50">
    
	<div class="oppFormList form-group row">
		<label class="col-form-label col-sm-3 required">
		    Title
		</label>
		<div class="oppFormInputContainer col-sm-9 ">
			<input type="email" class="oppFormTitle oppFormTextInput form-control" placeholder="Title of the opportunity">
			<span class="oppFormTitleWarning warn"></span>
		</div>
	</div>

	<div class="oppFormList form-group row">
		<label class="col-form-label col-sm-3 required">
		    Opportunity Start Date
		</label>
		<div class="oppFormInputContainer col-sm-9 ">
			<input type="text" class="oppFormStartDateTime oppFormTextInput dateTimeControl form-control" placeholder="MM/DD/YYYY">
			<span class="oppFormStartDateTimeWarning warn"></span>
		</div>
	</div>

	<div class="oppFormList form-group row">	    
		<label class="col-form-label col-sm-3 required">
		    Opportunity End Date
		</label>
		<div class="oppFormInputContainer col-sm-9">
			<input type="text" class="oppFormEndDateTime oppFormTextInput dateTimeControl form-control" placeholder="MM/DD/YYYY">
			<span class="oppFormEndDateTimeWarning warn"></span>
		</div>
	</div>

	<div class="oppFormList form-group row">
		<label class="col-form-label col-sm-3 required">Description</label>
		<div class="oppFormInputContainer col-sm-9">
			<textarea class="oppFormDescription oppFormTextInput form-control" rows="8"></textarea>
		</div>
	</div>

	<div class="oppFormList form-group row">
		<label class="col-sm-3 form-check-label required">Open slots</label>
		<div class="oppFormInputContainer col-sm-9">
			<input type="text" class="oppFormTotalSeats oppFormTextInput form-control" maxlength="3">
			<span class="oppFormTotalSeatsWarning warn"></span>
		</div>
	</div>

	<div class="oppFormList createOppLine form-group row ">
		<label class="col-form-label col-sm-3 required">Is this part of a class?</label>
		<div class="oppFormInputContainer checkBoxes col-sm-9">
			<input class="oppFormIsClass checkBox" type="checkbox" checked>
		</div>
	</div>

<!-- Sub Divs -->

	<div class="oppFormClassSection formSection">
		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Class Name</label>
			<div class="oppFormInputContainer col-sm-9">
                <input class="oppFormClassName oppFormTextInput form-control" type="text"/>
                <span class="oppFormClassNameWarning warn"></span>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Class Type</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormClassType oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Term</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormTerm oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Year</label>
			<div class="oppFormInputContainer col-sm-9 ">
				<select class="oppFormTerm form-control">
					<option>2015</option>
					<option>2016</option>
					<option>2017</option>
					<option selected>2018</option>
					<option>2019</option>
					<option>2020</option>
					<option>2021</option>
					<option>2022</option>
				</select>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Course Summary</label>
			<div class="oppFormInputContainer col-sm-9">
				<textarea class="oppFormCourseSummary oppFormTextInput form-control" rows="8"></textarea>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Estimated Class Size</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormClassSize oppFormTextInput form-control" type="text"/>
				<span class="oppFormClassSizeWarning warn"></span>
			</div>
		</div>

		<div class="oppFormList createOppLine form-group row ">
			<label class="col-form-label col-sm-3">Required for Class?</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormIsRequiredForClass checkBox" type="checkbox">
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Application Due Date</label>
			<div class="oppFormInputContainer relative col-sm-9">
				<input type="text" class="oppFormApplicationDueDate oppFormTextInput form-control" placeholder="MM/DD/YYYY">
			</div>
		</div>

	</div>
	<div class="oppFormNonClassSection formSection initialDisplayNone">

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Support Preference</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormSupportPref oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Onboarding</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormOnboarding oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Minimum Persons Required</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormMinReqPersons oppFormTextInput form-control" type="text"/>
				<span class="oppFormMinReqPersonsWarning warn"></span>
			</div>
		</div>

		<div class="oppFormList form-group row createOppLine">
			<label class="col-form-label col-sm-3">Teams?</label>
			<div class="oppFormInputContainer col-sm-9 checkBoxes">
				<input class="oppFormIsTeams checkBox" type="checkbox">
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Team Size</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormTeamSize oppFormTextInput form-control" type="text"/>
				<span class="oppFormTeamSizeWarning warn"></span>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Number of Teams</label>
			<div class="col-sm-9 oppFormInputContainer">
				<input class="oppFormNumTeams oppFormTextInput form-control" type="text"/>
				<span class="oppFormNumTeamsWarning warn"></span>
			</div>
		</div>
	</div>

<div class="oppFormList form-group row createOppLine">
	<label class="col-form-label col-sm-3">Opportunity Type</label>
	<div class="col-sm-9 oppFormInputContainer checkBoxes">
	    
        <div class="form-check form-check-inline">
            <input class="oppFormOppType form-check-input radio" type="radio" name="oppFormOppType" value="project" checked>
            <label class="form-check-label">Project</label>
        </div>

		<div class="form-check form-check-inline">
			<input class="oppFormOppType form-check-input radio" type="radio" name="oppFormOppType" value="service">
			<label class="form-check-label">Service</label>
		</div>

		<div class="form-check form-check-inline">
			<input class="oppFormOppType form-check-input radio" type="radio" name="oppFormOppType" value="volunteer">
			<label class="form-check-label">Volunteer</label>
		</div>

		<div class="form-check form-check-inline">
			<input class="oppFormOppType form-check-input radio" type="radio" name="oppFormOppType" value="gig">
			<label class="form-check-label">Gig</label>
		</div>

		<div class="form-check form-check-inline">
			<input class="oppFormOppType form-check-input radio" type="radio" name="oppFormOppType" value="deliverable">
			<label class="form-check-label">Deliverable</label>
		</div>

		<div class="form-check form-check-inline">
			<input class="oppFormOppType form-check-input radio" type="radio" name="oppFormOppType" value="other">
			<label class="form-check-label">Other</label>
		</div>

	</div>
</div>

<!-- Sub Divs -->

	<div class="oppFormServiceSection oppTypeSection formSection">

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Prefered Service Work</label>
			<div class="col-sm-9 oppFormInputContainer">
				<input class="oppFormPrefServiceWork oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Prefered Agency Type</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormPrefAgencyType oppFormTextInput form-control" type="text"/>
			</div>
		</div>
	</div>

	<div class="oppFormVolunteerSection oppTypeSection formSection initialDisplayNone">

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Address</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormAddress oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Donation</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormDonation oppFormTextInput form-control" type="text"/>
				<span class="oppFormDonationWarning warn"></span>
			</div>
		</div>

	</div>
	<div class="oppFormProjectSection oppTypeSection formSection initialDisplayNone">

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Preferred Agency Type</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormAgencyType oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Agency Commitment</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormAgencyCommitment oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Not Allowed</label>
			<div class="coppFormInputContainer col-sm-9">
				<input class="oppFormNotAllowed oppFormTextInput form-control" type="text"/>
			</div>
		</div>
	</div>

	<div class="oppFormGigSection oppTypeSection formSection initialDisplayNone">

		<div class="oppFormList createOppLine form-group row">
			<label class="col-form-label col-sm-3">Time Required</label>
			<div class="oppFormInputContainer checkBoxes col-sm-9 ">
				<input class="oppFormIsTimeRequired checkBox" type="checkbox">
			</div>
		</div>

	</div>
	<div class="oppFormDeliverableSection oppTypeSection formSection initialDisplayNone">

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Product</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormProduct oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Deliverables</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormDeliverables oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList createOppLine form-group row">
			<label class="col-form-label col-sm-3">Online</label>
			<div class="oppFormInputContainer checkBoxes col-sm-9">
				<input class="oppFormIsVirtual checkBox" type="checkbox">
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Given Support</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormGivenSupport oppFormTextInput form-control" type="text"/>
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Requirements</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormRequirements oppFormTextInput form-control" type="text"/>
			</div>
		</div>
	</div>
	<div class="oppFormOtherSection oppTypeSection formSection initialDisplayNone">

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Examples</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormExamples oppFormTextInput form-control" type="text"/>
			</div>
		</div>

	</div>
	<div class="oppFormGigDeliverableSharedSection oppTypeSection formSection initialDisplayNone">

		<div class="oppFormList form-group row createOppLine">
			<label class="col-form-label col-sm-3">Is it paid?</label>
			<div class="oppFormInputContainer checkBoxes col-sm-9">
				<input class="oppFormIsPaid checkBox" type="checkbox">
			</div>
		</div>

		<div class="oppFormList form-group row">
			<label class="col-form-label col-sm-3">Amount of Pay</label>
			<div class="oppFormInputContainer col-sm-9">
				<input class="oppFormPayAmount oppFormTextInput form-control" type="text"/>
				<span class="oppFormPayAmountWarning warn"></span>
			</div>
		</div>

	</div>
	
	 <div class="oppFormHoursSharedSection oppTypeSection formSection">
	     <div class="oppFormList form-group row">
			 <label class="col-form-label col-sm-3">Number of Hours</label>
			 <div class="oppFormInputContainer col-sm-9">
			     <input class="oppFormHours oppFormTextInput form-control" type="text"/>
			 </div>
        </div>
    </div>
    
</div>

<div class="pull-right">* Required field</div>

<div class="mt20 mb20 centerText">
    <button class="saveOpportunity btn btn-warning btn--decorated">Submit</button>
</div>
<div class="mt20 mb20 centerText">
    <button class="deleteOpportunity btn btn-warning btn--decorated initialDisplayNone">Delete</button>
</div>

