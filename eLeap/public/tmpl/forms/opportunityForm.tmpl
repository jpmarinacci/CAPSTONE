<div class="full-row">
    <h3 class="heading-helper heading-helper--sm">Create an Opportunity</h3>
    <div class="leftText">
        <div class="widget widget--message">
            <div class="content">
                <div class="table-responsive">
                    <table class="table table--target table--mod table--forum table--secondary">
                        <colgroup class="col-small">
                        <colgroup class="col-wide-lg">
                        <tbody>
                        <tr>
                            <td>Title</td>
                            <td>
                                <input name="opportunityFormTitle" size="80">
                            </td>
                        </tr>
                        <tr>
                            <td>Description</td>
                            <td>
                                <textarea name="opportunityFormDescription" rows="6" cols="80"></textarea>
                            </td>
                        </tr>
                        <tr>
                            <td>Start Date</td>
                            <td>
                                <input name="startDateTimeInput" type="text" size="18">
                            </td>
                        </tr>
                        <tr>
                            <td>End Date</td>
                            <td>
                                <input name="endDateTimeInput" type="text" size="18">
                            </td>
                        </tr>
                        <tr>
                            <td>Number of hours</td>
                            <td>
                                <input name="duration" size="4">
                            </td>
                        </tr>
                        <tr>
                            <td>Open slots</td>
                            <td>
                                <input name="totalSeats" size="4">
                            </td>
                        </tr>
                        <tr>
                            <td>Is it Service Learning?</td>
                            <td>
                                <input type="radio" name="isServiceLearning" value="no" checked> No
                                <input type="radio" name="isServiceLearning" value="yes"> Yes
                            </td>
                        </tr>
                        <tr>
                            <td>Is it paid?</td>
                            <td>
                                <input type="radio" name="isPaid" value="no" checked> No
                                <input type="radio" name="isPaid" value="yes"> Yes
                                <input placeholder="Amount" name="pay" size="8">
                            </td>
                        </tr>
                        <tr>
                            <td>Is it recurrent?</td>
                            <td>
                                <input type="radio" name="isRecurrent" value="yes" checked> No
                                <input type="radio" name="isRecurrent" value="no"> Yes, every
                                <input placeholder="?" size="4"> days
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" class="centerText">
                                <button class="btn btn-warning btn--decorated">Submit</button>
                            </td>
                        </tr>
                        </tbody>
                        </colgroup>
                        <colgroup>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>