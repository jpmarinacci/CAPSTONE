<div class="login leftText col-12 pt30">
    <div class="selectRolesContainer oppFormList form-group row">
        <label class="col-sm-4 col-form-label">Role</label>
        <div class="oppFormInputContainer col-sm-8">
            <select class="selectRoles selector form-control pointer" tabindex="1" ></select>
        </div>
    </div>
    <div class="signupRoleInfoContainer col-12 row initHidden">
    	<div class="signupRoleName col-form-label initHidden"></div>
    </div>
    
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Email</label>
        <div class="col-sm-8">
            <input class="signupEmail form-control-plaintext" type="text" tabindex="2" placeholder="">
            <span class="signupEmailWarning warn"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Name</label>
        <div class="col-sm-8">
            <input class="signupName form-control-plaintext" type="text" tabindex="3" placeholder="">
            <span class="signupNameWarning warn"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Phone Number</label>
        <div class="col-sm-8">
            <input class="signupPhone form-control-plaintext" type="text" tabindex="4" placeholder="">
            <span class="signupPhoneWarning warn"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Password</label>
        <div class="col-sm-8">
            <input class="signupCredential form-control-plaintext" type="password" tabindex="5" placeholder="******">
            <span class="signupCredentialWarning warn"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Re-Type Password</label>
        <div class="col-sm-8">
            <input class="signupRetypeCredential form-control-plaintext" type="password" tabindex="6"  placeholder="******">
            <span class="signupRetypeCredentialWarning warn"></span>
        </div>
    </div>

	<div class="signupBtnContainer centerText">
	    <button class="signupBtn btn btn--decorated" tabindex="7">Sign Up</button>
	</div>
</div>

